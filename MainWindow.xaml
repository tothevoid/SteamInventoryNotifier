<Window x:Class="SteamInventoryNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamInventoryNotifier"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" MinWidth="400" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Orientation="Vertical">
            <Label HorizontalAlignment="Center">Steam ID</Label>
            <TextBox x:Name="steam_id"></TextBox>
            <Button Click="OnSubmitClick" Foreground="White" Background="#171a21">Submit</Button>
        </StackPanel>
    </Grid>
</Window>
